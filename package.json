{
  "name": "moddl",
  "displayName": "ModDL Language Support",
  "description": "ModDL language support with syntax highlighting and playback controls",
  "version": "0.1.3",
  "publisher": "sylx",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/moddl-vscode"
  },
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "images/moddl-icon.png",
  "contributes": {
    "languages": [
      {
        "id": "moddl",
        "aliases": [
          "ModDL",
          "moddl"
        ],
        "extensions": [
          ".moddl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "moddl",
        "scopeName": "source.moddl",
        "path": "./syntaxes/moddl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "moddl.play",
        "title": "ModDL: Play Current File",
        "icon": "$(play)"
      },
      {
        "command": "moddl.stop",
        "title": "ModDL: Stop Playback",
        "icon": "$(stop)"
      },
      {
        "command": "moddl.export",
        "title": "ModDL: Export Audio File",
        "icon": "$(save)"
      },
      {
        "command": "moddl.openWebview",
        "title": "ModDL: Toggle Graphical Editor",
        "icon": "$(preview)"
      }
    ],
    "keybindings": [
      {
        "command": "moddl.play",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorLangId == moddl"
      },
      {
        "command": "moddl.stop",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorLangId == moddl"
      },
      {
        "command": "moddl.export",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorLangId == moddl"
      },
      {
        "command": "moddl.openWebview",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorLangId == moddl"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "moddl-preview",
          "title": "ModDL Graphical Editor",
          "icon": "images/moddl-icon.png"
        }
      ]
    },
    "views": {
      "moddl-preview": [
        {
          "type": "webview",
          "id": "moddl.graphicalEditor",
          "name": "ModDL Graphical Editor"
        }
      ]
    },
    "configuration": {
      "title": "ModDL",
      "properties": {
        "moddl.executablePath": {
          "type": "string",
          "default": "moddl",
          "description": "Path to the ModDL executable (moddl.exe)"
        },
        "moddl.defaultOutputType": {
          "type": "string",
          "enum": [
            "audio",
            "stdout",
            "null"
          ],
          "default": "audio",
          "description": "Default output type for ModDL playback"
        },
        "moddl.exportFormat": {
          "type": "string",
          "enum": [
            "wav",
            "mp3",
            "m4a"
          ],
          "default": "wav",
          "description": "Default export format for audio files"
        },
        "moddl.ffmpegPath": {
          "type": "string",
          "default": "ffmpeg",
          "description": "Path to ffmpeg executable (required for mp3/m4a export)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build:webview",
    "lint": "eslint src --ext ts",
    "watch": "concurrently \"tsc -watch -p ./\" \"npm run dev:webview\"",
    "package": "vsce package",
    "build:docs": "tsx scripts/doc2md.ts ./moddl_docs ./moddl_docs.md",
    "build:webview": "vite build --mode development",
    "dev:webview": "vite build --watch"
  },
  "devDependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/turndown": "^5.0.5",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/vsce": "^2.24.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.26.0",
    "jotai": "^2.11.0",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.473.0",
    "postcss": "^8.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "turndown": "^7.2.0",
    "typescript": "^4.8.4",
    "vite": "^5.2.6"
  },
  "dependencies": {
    "chart.js": "^4.4.7",
    "react-chartjs-2": "^5.3.0",
    "shadcn-ui": "^0.9.4"
  }
}
